<ul class="card-text font-weight-light list-group list-group-flush">
  {% assign work = data[1] | sort: 'startDate' | reverse %}
  {% for content in work %}
    <li class="list-group-item">
      <div class="row">
        <div class="col-xs-4 cl-sm-4 col-md-4 text-center" style="width: 75px">
          <img src="{{content.image}}" title="example image" class="img-fluid">
        </div>
        <div class="col-xs-8 cl-sm-8 col-md-8 mt-2 mt-md-0">
          <h6 class="title font-weight-bold ml-1 ml-md-4"><a href="" onclick="return false" style="text-decoration: none; cursor: default">{{ content.position }}</a></h6>
          {% if content.startDate %}
            {% assign startDate = content.startDate %}
            {% assign endDate = content.endDate | default: 'Present' %}
            {% assign date = startDate | append: ' - ' %}
            {% assign date = date | append: endDate %}
          {% else %}
            {% assign date = '' %}
          {% endif %}
          <h6 class="title font-weight-bold ml-1 ml-md-4" style="min-width: 75px"> {{ date }} </h6>
          <h6 class="ml-1 ml-md-4" style="font-size: 0.95rem">{{ content.name }}</h6>
          <h6 class="ml-1 ml-md-4" style="font-size: 0.95rem">{{ content.summary }}</h6>
          <ul class="items">
            {% for item in content.highlights %}
              <li>
                <span class="item">{{ item }}</span>
              </li>
            {% endfor %}
          </ul>
        </div>
      </div>
    </li>
  {% endfor %}
</ul>
